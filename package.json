{
  "name": "react-native-storage-toolkit",
  "version": "1.0.0",
  "description": "Type-safe storage solution for React Native with MMKV, SQLite, encryption and biometric support",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "build": "bob build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "test": "jest",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "storage",
    "mmkv",
    "sqlite",
    "encryption",
    "keychain",
    "biometric",
    "zustand",
    "async-storage",
    "secure-storage"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muhittincamdali/ReactNativeStorage.git"
  },
  "author": "Muhittin Camdali",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/muhittincamdali/ReactNativeStorage/issues"
  },
  "homepage": "https://github.com/muhittincamdali/ReactNativeStorage#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.73.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "react": "^18.2.0",
    "react-native": "^0.74.0",
    "react-native-builder-bob": "^0.23.0",
    "release-it": "^17.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.4.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.70.0",
    "react-native-mmkv": ">=2.0.0",
    "react-native-keychain": ">=8.0.0",
    "react-native-quick-sqlite": ">=8.0.0"
  },
  "peerDependenciesMeta": {
    "react-native-mmkv": {
      "optional": true
    },
    "react-native-keychain": {
      "optional": true
    },
    "react-native-quick-sqlite": {
      "optional": true
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx"],
    "testPathIgnorePatterns": ["/node_modules/", "/lib/"]
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      ["typescript", { "project": "tsconfig.build.json" }]
    ]
  }
}
